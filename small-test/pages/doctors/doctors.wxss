.doc-container{
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid #666;
  background: #ddd;
  height: 40px;
  line-height: 40px;
  font-size: 16px;
}
.selected{
  font-weight: 700;
}
.doc-list{
  padding: 10px;
}
.doc-list-item{
  display: flex;
  height: 150px;
  padding: 10px 0;
  border-bottom: 1px solid #ddd;
}
.doc-img{
  width: 100px;
  height: 130px;
}
.doc-img image{
  width: 100%;
  height: 100%;
}
.list-right{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.list-4{
  display: flex;
  justify-content: space-between;
}
.list-4-item view{
  text-align: center;
}
.list-4-item image{
  width: 20px;
  height: 20px;
}
.loadmore-container{
  text-align: center;
}
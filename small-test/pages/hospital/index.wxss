.hos-list{
  padding: 10px;
  font-size: 14px;
}

.hos-list-item{
  display: flex;
  justify-content: space-between;
  flex: 0 0 auto;
}
.hos-list-left{
  display: flex;
  justify-content: start;
  flex: 0 0 auto;
}
.hos-img{
  width: 50px;
  height: 50px;
}
.hos-img image{
  width: 100%;
  height: 100%;
}
.hos-desc{
  display: flex;
  flex-direction: column;
  width: 70%;
  overflow: hidden;
}
.hos-desc text{
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}